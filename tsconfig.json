{
    "include": [ "src" ],
    "exclude": [ "node_modules" ],
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "paths": {
            "@*": [ "src/*" ],
            "@types": [ "src/def.d.ts" ],
        }
    }
}